<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.labassignment1.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:id="@+id/flcontent"

        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="City or airport"
            android:ems="10"
            android:layout_marginTop="54dp"
            android:id="@+id/editText3"
            android:layout_below="@+id/SampleText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"/>

        <TextView
            android:text="Flying from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            android:id="@+id/textView16"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:text="Flying to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginTop="28dp"
            android:id="@+id/textView17"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="City or Airport"
            android:ems="10"
            android:layout_below="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:id="@+id/editText4"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"/>

        <TextView
            android:text="Departing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:layout_marginTop="25dp"
            android:id="@+id/textView18"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:text="Returning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/textView18"
            android:layout_marginTop="30dp"
            android:id="@+id/textView19"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:text="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText7"
            android:textColor="@color/colorWhite"
            android:background="@drawable/com_facebook_tooltip_black_background"
            android:layout_marginTop="43dp"
            android:id="@+id/button2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="mm/dd/yyyy"
            android:ems="10"
            android:id="@+id/editText6"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_above="@+id/editText7"
            android:layout_alignStart="@+id/editText5"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="mm/dd/yyyy"
            android:ems="10"
            android:id="@+id/editText5"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/textView17"
            android:layout_alignStart="@+id/editText4"
            android:textAlignment="center"/>

        <TextView
            android:text="No of tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:id="@+id/textView20"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/textView19"
            android:layout_alignEnd="@+id/textView16"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText7"
            android:text="0"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_alignBottom="@+id/textView20"
            android:layout_alignStart="@+id/editText6"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Vacation Packages"
            android:textStyle="bold"
            android:id="@+id/SampleText"
            android:textSize="20dp"
            android:layout_marginTop="59dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_navigation_drawer"
        android:layout_gravity="start"
        android:onClick="selectItemDrawer">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
